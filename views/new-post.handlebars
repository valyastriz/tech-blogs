{{!-- template for creating a new blog post --}}

<div class="container mt-5">
    <div class="card p-4">
        <h1 class="card-title text-center mb-4">New Blog</h1>
        <form id="new-blog-form">
            <div class="form-group">
                <label for="blog-title" class="sr-only">Blog Title</label>
                <input type="text" id="blog-title" class="form-control mb-3" placeholder="Blog Title" required>
            </div>
            <div class="form-group">
                <label for="blog-content" class="sr-only">Blog Content</label>
                <textarea id="blog-content" class="form-control" rows="10" placeholder="Blog Content" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4">Submit</button>
        </form>
    </div>
</div>

<!-- script to handle the form submission -->
<script src="/js/new-post.js"></script>
