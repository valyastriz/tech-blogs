<div class="container mt-5">
    <div class="card p-4">
        <h1 class="card-title">{{post.title}}</h1>
        <p class="text-muted">
            Date Published: {{post.createdAt}} <br>
            Author: {{post.user.name}}
        </p>
        <div class="card-body">
            <p>{{post.content}}</p>
        </div>
    </div>

    <div class="comments-section mt-5">
        <h3>Comments</h3>
        
        {{#each post.comments}}
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">{{this.user.name}}</h5>
                <p class="card-text">{{this.content}}</p>
                <p class="text-muted small">Date: {{this.createdAt}}</p>
            </div>
        </div>
        {{/each}}

        {{#if logged_in}}
        <div class="mt-4">
            <form id="comment-form">
                <textarea id="comment-content" class="form-control mb-2" placeholder="Text box to add comment"></textarea>
                <!-- Hidden input to store the post ID -->
                <input type="hidden" id="post-id" value="{{post.id}}">
                <button type="submit" id="submit-comment" class="btn btn-primary">Submit Comment</button>
            </form>
        </div>
        {{else}}
        <p>You need to <a href="/login">log in</a> to leave a comment.</p>
        {{/if}}
    </div>
</div>

<!-- Include the comments.js file -->
<script src="/js/comments.js"></script>
