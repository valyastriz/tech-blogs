{{!-- template for login page --}}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5" style="width: 400px; background-color: #dcdcdc; border-radius: 10px;">
        <h2 class="text-center mb-4" style="font-family: 'Cursive', sans-serif;">Login</h2>
        <form id="login-form">
            <div class="form-group mb-3">
                <input type="text" class="form-control" id="name" placeholder="Username" required>
            </div>
            <div class="form-group mb-4">
                <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3" style="background-color: #6A5ACD;">Submit</button>
            <a href="/signup" class="btn btn-secondary w-100" style="background-color: #8470FF;">Signup</a>
        </form>
    </div>
</div>


<!-- Link to external JavaScript file -->
<script src="/js/login.js"></script>